# ZetsuServ Production Configuration for PythonAnywhere
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-very-long-random-secret-key-here-change-this

# Database Configuration
# For PythonAnywhere MySQL (recommended for production):
# DATABASE_URL=mysql+pymysql://yourusername:yourpassword@yourusername.mysql.pythonanywhere-services.com/yourusername$zetsuserv

# For SQLite (simpler but less scalable):
# DATABASE_URL=sqlite:////home/yourusername/zetsuserv/instance/zetsuserv.db

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Upload Configuration (optional)
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Security Settings (optional but recommended)
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax